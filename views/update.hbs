<form action="/update" method="POST" class="rest">
  <h1>Update an entry</h1>
  <input type="hidden" name="timestamp" value="{{timestamp}}">
  <input type="hidden" name="entryid" value="{{entryid}}">
  <input type="text" placeholder="Title" name="title" value="{{title}}">
  <span>
    <input type="time" name="time"
    ><input type="date" name="date"
    ><button id="show-img-ui">Add photos</button
  ></span>
  <textarea placeholder="Your thoughts" name="body">{{body}}</textarea>
  <div id="img-ui">
    <ul id="img-files">{{#each filenames}}<li data-id="{{succ @index}}">
      <button class="remove icon">&#59915;</button>
      <span class="file-name" tabindex="-1" data-ext="{{this.ext}}">{{this.name}}</span>
      <input type="text" value="{{this.name}}">
    </li>{{/each}}<li id="add">
      <button class="icon">&#59914;</button>
      <input type="file" accept="image/*" name="files" multiple>
    </li></ul>
    <div id="img-md">Insert into markdown using: <code>![Your text](/images/{{_id}}/<span></span>)</code></div>
    <ul id="images"></ul>
  </div>
  <button type="submit">Update <span class="spinner icon">&#59772;</spin></button>
</form>
<template id="image-title"
  ><li>
    <button class="remove icon">&#59915;</button>
    <span class="file-name" tabindex="-1"></span>
    <input type="text">
  </li
></template>
<template id="image"><li><img></li></template>
{{#contentFor 'class'}}update{{/contentFor}}
{{#contentFor 'scripts'}}
<script src="/js/create.js"></script>
{{/contentFor}}
